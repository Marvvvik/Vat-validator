<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VAT Validator</title>
</head>

<body>

    <div class="vatvalidator">
        <h1>VAT Number Validator</h1>

        <div class="backMessage">
            {% if validation_result is defined %}
                <p class="message {% if validation_result.success %}success-message{% else %}error-message{% endif %}">
                    {{ validation_result.message }}
                </p>

                {% if validation_result.success %}
                    <div class="companyInfo">
                        <p>
                            <span class="company-label">Company Name:</span>
                            <span class="company-name">{{ validation_result.company_name }}</span>
                        </p>
                        <p>
                            <span class="company-label">Address:</span>
                            <span class="company-name">{{ validation_result.address }}</span>
                        </p>
                    </div>
                {% endif %}
            {% endif %}
        </div>

        <form method="POST" action="{{ path('validate_vat') }}">
            <input type="text" name="vat_number" placeholder="VAT Number" required>
            <button type="submit">Check</button>
        </form>

        <div class="logoutButton">
            <button id="logoutButton">Logout</button>
        </div>
    </div>

    <script>
        window.onload = () => {
            const token = localStorage.getItem('token');
            if (!token) {
                window.location.href = '/login';
            }
        };

        const logoutButton = document.getElementById('logoutButton');
        logoutButton.addEventListener('click', async () => {
            const token = localStorage.getItem('token');
            if (token) {
                const response = await fetch('/api/logout', {
                    method: 'POST',
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json',
                    }
                });
                if (response.ok) {
                    localStorage.removeItem('token');
                    window.location.href = '/login';
                } else {
                    console.error('Error during logout:', response.status);
                }
            }
        });
    </script>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(45deg, #5c068c 50%, #ff8200);
        }

        html,
        body {
            height: 100%;
            width: 100%;
            overflow: hidden;
        }

        .vatvalidator {
            width: 60%;
            height: auto;
            border: #ff8200 solid 0.2rem;
            background: #4e196b;
            border-radius: 3rem;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .vatvalidator h1 {
            text-align: center;
            margin-top: 2rem;
            color: #ff8200;
            font-size: 3rem;
            font-family: "Poppins", sans-serif;
            margin-bottom: 2rem;
        }

        .backMessage {
            width: 80%;
            height: auto;
            text-align: center;
            margin-bottom: 2rem;
        }

        .backMessage p {
            font-weight: bold;
            font-size: 1.3rem;
            font-family: "Poppins", sans-serif;
        }

        .success-message {
            color: #28a745;
        }

        .error-message {
            color: #dc3545;
        }

        .companyInfo {
            display: flex;
            justify-content: center;
        }

        .companyInfo p {
            font-size: 1rem;
            padding: 0 1rem;
        }

        .company-label {
            color: #ff8200;
        }

        .company-name {
            color: #fff;
        }

        .vatvalidator form {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: auto;
        }

        .vatvalidator form input {
            font-size: 1rem;
            padding: 0.8rem;
            width: 30%;
            font-family: "Poppins", sans-serif;
        }

        .vatvalidator form button {
            margin-top: 4rem;
            padding: 0.8rem 3rem;
            cursor: pointer;
            background: #ff8200;
            border: none;
            color: #fff;
            font-size: 1.5rem;
            font-family: "Poppins", sans-serif;
            margin-bottom: 3rem;
        }

        .vatvalidator form button:hover {
            box-shadow: 15rem 0 0 inset #fff;
            color: #ff8200;
            transition: box-shadow 0.8s, color 0.8s;
        }

        .logoutButton {
            width: 100%;
            display: flex;
            justify-content: flex-end;
        }

        .logoutButton button {
            padding: 0.6rem 2rem;
            cursor: pointer;
            background: #ff8200;
            border: none;
            color: #fff;
            font-size: 1.2rem;
            font-family: "Poppins", sans-serif;
            margin: 0 2rem 1rem 0;
        }

        .logoutButton button:hover {
            box-shadow: 15rem 0 0 inset #fff;
            color: #ff8200;
            transition: box-shadow 0.8s, color 0.8s;
        }
    </style>

</body>

</html>
